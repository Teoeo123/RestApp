<UserControl x:Class="RESTApp.Controls.UserDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RESTApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="15" Background="#333333">
        <StackPanel Margin="20" >
        
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nickname:" Margin="0,5" Foreground="White" />
                <TextBox x:Name="txtNickname" Width="200" Margin="20,0,0,0"/>
            </StackPanel>
        

            <TextBlock Text="Bio:" Margin="0,10,0,5" Foreground="White"/>
            <TextBox x:Name="txtBio" AcceptsReturn="True" TextWrapping="Wrap" Height="50" />

            <TextBlock Text="Profile Picture:" Margin="0,10,0,5" Foreground="White" />

            <Button x:Name="btnSelectPicture" Background="#555555" Content="Choose File" Click="btnSelectPicture_Click" />
            <Image x:Name="imgProfilePicture" Height="100" Stretch="Uniform" Margin="0,5" />

            <Button x:Name="btnSave" Background="#555555" Content="Save Changes" Click="btnSave_Click" Margin="0,20" />
        </StackPanel>
    </Border>
</UserControl>
